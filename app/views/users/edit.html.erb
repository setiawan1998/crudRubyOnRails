<div class="container p-5">
  <div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Edit User</h2>
        <hr/>
        <%= form_tag({:action=>'update'},{:method=>'post'}) do %>
            <%= hidden_field_tag(:id, @user.id) %>
            <div class="form-group">
                <%= label_tag(:name, "User Name")%>
                <%= text_field_tag(:name, @user.name, class: 'form-control', placeholder: 'User Name')%>
            </div>
            <div class="form-group">
                <%= label_tag(:phone_number, "Phone Number")%>
                <%= text_field_tag(:phone_number, @user.phone_number, class: 'form-control', placeholder: 'Phone Number')%>
            </div>
            <div class="form-group">
                <%= label_tag(:address, "Address") %>
                <%= text_area_tag(:address, @user.address, class: 'form-control') %>
            </div>
            <hr/>
            <div class="form-group">
                <%= submit_tag("Submit", class: 'btn btn-success') %>
                <%= link_to 'Cancel', users_index_path, class: 'btn btn-danger' %>
            </div>
        <% end %>
    </div>
  </div>
</div>